{
    "name": "Scroll to Death",
    "version": "1.0",
    "description": "Scrolling will waste your life.",
    "manifest_version": 2,
    "icons": { "16": "16x16.png",
        "48": "48x48.png",
       "128": "128x128.png" },

    "background": 
    {
        "scripts": 
        [
            "options.js",
            "background.js"
        ]
    },
    "browser_action":{

        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "ScrollToDeath"
    },
    "permissions": [
        "storage",
        "tabs"
      ]
}